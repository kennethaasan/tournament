{
  "name": "tournament",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run typegen && next build",
    "start": "next start",
    "lint": "npm run typegen && biome check",
    "format": "biome format --write",
    "typegen": "next typegen",
    "tsc": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "spectral": "spectral lint openapi.yaml",
    "spectral:ci": "spectral lint openapi.yaml --format json",
    "openapi:generate": "openapi-typescript openapi.yaml -o src/lib/api/generated/openapi.ts",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "seed": "tsx scripts/seed.ts"
  },
  "dependencies": {
    "better-auth": "^1.3.34",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "next": "16.0.1",
    "openapi-fetch": "^0.15.0",
    "pino": "^10.1.0",
    "postgres": "^3.4.4",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@playwright/test": "^1.49.0",
    "@stoplight/spectral-cli": "^6.11.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24.10.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.7",
    "babel-plugin-react-compiler": "1.0.0",
    "drizzle-kit": "^0.31.6",
    "openapi-typescript": "^7.5.0",
    "pino-pretty": "^13.1.2",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^4.0.7"
  }
}
