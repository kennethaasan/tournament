{
  "name": "tournament",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=24.0.0 <25.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "SKIP_ENV_VALIDATION=true npm run typegen && next build",
    "package:lambda": "./scripts/package-lambda.sh",
    "build:lambda": "npm run build && npm run package:lambda",
    "start": "next start",
    "lint": "npm run typegen && biome check .",
    "format": "biome check --write .",
    "typegen": "next typegen",
    "tsc": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:accessibility": "pa11y-ci",
    "spectral": "spectral lint openapi.yaml",
    "spectral:ci": "spectral lint openapi.yaml --format json",
    "openapi:generate": "openapi-typescript openapi.yaml -o src/lib/api/generated/openapi.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "SKIP_ENV_VALIDATION=true drizzle-kit migrate",
    "db:push": "drizzle-kit push --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "docker:compose:up": "docker-compose up -d && sleep 10 && npm run seed",
    "docker:compose:down": "docker-compose down -v",
    "docker:compose:reset": "npm run docker:compose:down && npm run docker:compose:up",
    "seed": "npm run db:migrate && tsx ./scripts/seed.ts",
    "check-performance": "tsx scripts/check-performance.ts"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.30.0",
    "@aws-lambda-powertools/metrics": "^2.30.0",
    "@aws-sdk/client-ses": "^3.956.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tanstack/react-query": "^5.90.12",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.4.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.0",
    "next-themes": "^0.4.6",
    "openapi-fetch": "^0.15.0",
    "postgres": "^3.4.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@electric-sql/pglite": "^0.3.14",
    "@playwright/test": "^1.57.0",
    "@stoplight/spectral-cli": "^6.11.0",
    "@stoplight/spectral-owasp-ruleset": "^2.0.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^24",
    "@types/pa11y": "^5.3.7",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "babel-plugin-react-compiler": "1.0.0",
    "drizzle-kit": "^0.31.8",
    "happy-dom": "^20.0.11",
    "openapi-typescript": "^7.5.0",
    "pa11y": "^9.0.1",
    "pa11y-ci": "^4.0.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^4.0.16",
    "vitest-axe": "^0.1.0",
    "wait-on": "^9.0.3"
  }
}
